<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "nl.kevinalberts.canisius.roosters"
	version 	= "1.0.2"
	versionCode	= "7">

	<name>Canisius RoosterApp</name>

	<description>
		Officiële mobiele applicatie voor de roosters van de bovenbouw van het St. Canisius Almelo. Beschikbaar op Android, Blackberry, Symbian en webOS.
	</description>

	<author href="http://www.kevinalberts.nl/"
		email="support@kevinalberts.nl">
		Kevin Alberts
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="assets/img/icon72.png" gap:role="default" width="72" height="72" />
	<icon src="assets/img/icon48.png" width="48" height="48" />
	<icon src="assets/img/icon36.png" width="36" height="36" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
